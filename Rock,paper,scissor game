import java.util.Random;
import java.util.Scanner;

public class Class {
    public static void main(String[] args) {
        System.out.println("Want to play rock,paper and scissor ?");
        System.out.println("if yes then enter 0 for rock, 1 for paper and 2 for scissor");
        for(int i=0;i<5;i++){


        Scanner sc = new Scanner(System.in);
        int num = sc.nextInt();
        int number;
        Random random = new Random();
        number = random.nextInt(3);
        System.out.println(number);

         if(num<=number){
                if(num==number){
                    System.out.println("match is draw");

                }
             else if(num<1){
                  System.out.println("you win the game");
              }
              else if(num<2){
                  System.out.println("you loose the game");
              }


          }
          else if( num<=number && num>0){
              System.out.println("you win the game");


          }
          else if(num>number){
              if(num>0 && num>=1){
                  System.out.print("you win the game");
              }
              else if(number==0){
                  System.out.print("you loose0 the game");

              }

          }
      }

    }
